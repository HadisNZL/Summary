<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/common_title_header"/>

    <TextView
        android:id="@+id/time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_header_1"
        android:layout_centerInParent="true"
        android:layout_marginTop="130dp"
        android:text="0〃"
        android:textColor="#FF4E2C"
        android:textSize="@dimen/text_size_27"/>

    <com.example.hadis.summary.view.DonutProgress
        android:id="@+id/doutttt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        custom:donut_finished_color="#FF4E2C"
        custom:donut_finished_stroke_width="6dp"
        custom:donut_inner_bottom_text=""
        custom:donut_inner_bottom_text_color="#214193"
        custom:donut_inner_bottom_text_size="10dp"
        custom:donut_max="61"
        custom:donut_progress="0"
        custom:donut_text="录音"
        custom:donut_unfinished_color="#565656"
        custom:donut_unfinished_stroke_width="6dp"/>

    <Button
        android:id="@+id/send_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/space_15"
        android:layout_toLeftOf="@+id/doutttt"
        android:text="发送"/>

    <Button
        android:id="@+id/chonglu_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/space_15"
        android:layout_toRightOf="@+id/doutttt"
        android:text="重录"/>

</RelativeLayout>
